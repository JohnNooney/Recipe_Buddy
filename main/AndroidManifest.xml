<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testrecipeadder">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestRecipeAdder">
        <activity
            android:name=".recipe_entry"
            android:label="@string/title_activity_recipe_entry"></activity>
        <activity
            android:name=".recipe_form"
            android:label="@string/title_activity_recipe_form"></activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.TestRecipeAdder.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".recipeController.HTTPBroadcastReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.example.httppagegrab.HTTPBroadcastReceiver" />
            </intent-filter>
        </receiver>
    </application>

</manifest>